%p#notice= notice
%h1{:align => "center", :style => "color:blue"} PRODUCT CATEGORIES SETTING
%table{:align => "center", :border => "1px"}
  %thead
    %tr
      %th{:style => "color:green"} ID
      %th{:style => "color:green"} Category Name
      %th{:colspan => "3"}
  %tbody
    - @productcategories.each do |productcategory|
      %tr
        %td= productcategory.CategoryID
        %td= productcategory.CategoryName
        %td= link_to 'Show', productcategory
        %td= link_to 'Edit', edit_productcategory_path(productcategory)
        %td= link_to 'Destroy', productcategory, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Productcategory', new_productcategory_path
