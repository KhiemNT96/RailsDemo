%p#notice= notice
%h1{:align => "center", :style => "color:red"} PRODUCT SETTING
%table{:align => "center", :border => "1px"}
  %thead
    %tr
      %th{:style => "color:green"} ID
      %th{:style => "color:green"} Name
      %th{:style => "color:green"} Image
      %th{:style => "color:green"} Product Status
      %th{:style => "color:green"} Roots
      %th{:style => "color:green"} Description
      %th{:style => "color:green"} Rate
      %th{:style => "color:green"} Digital
      %th{:style => "color:green"} Customer question
      %th{:style => "color:green"} Feedback
      %th{:style => "color:green"} CategoryID
      %th{:colspan => "3"}
  %tbody
    - @products.each do |product|
      %tr
        %td= product.ProductID
        %td= product.ProductName
        %td= product.ProductImage
        %td= product.ProductStatus
        %td= product.Roots
        %td= product.Description
        %td= product.Rate
        %td= product.Digital
        %td= product.Customer_question
        %td= product.Feedback
        %td= product.ProductCategoryID
        %td= link_to 'Show', product
        %td= link_to 'Edit', edit_product_path(product)
        %td= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Product', new_product_path
